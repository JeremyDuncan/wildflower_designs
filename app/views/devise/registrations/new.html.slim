/ Flash messages
- if flash[:notice]
  .notification.is-success.center-align
    p= flash[:notice]

- if flash[:alert]
  .notification.is-danger.center-align
    p= flash[:alert]

/ Devise Sign Up Form
h2.center-align.lobster-font Sign up

= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'col s12' }) do |f|
  .card-panel.z-depth-3
    = render "devise/shared/error_messages", resource: resource

    .row
      .input-field.col.s12
        i.material-icons.prefix email
        = f.label :email
        = f.email_field :email, autofocus: true, autocomplete: "email"

    .row
      .input-field.col.s12
        i.material-icons.prefix lock_outline
        = f.label :password
        = f.password_field :password, autocomplete: "new-password"

    .row
      .input-field.col.s12
        i.material-icons.prefix lock_outline
        = f.label :password_confirmation
        = f.password_field :password_confirmation, autocomplete: "new-password"

    .row
      .col.s12.center
        = f.submit "Sign up", class: 'btn waves-effect waves-light'

    .row
      .col.s12.center-align
        = render "devise/shared/links"

style
  |
    .card-panel {
      padding: 20px;
      margin-top: 20px;
    }
    .input-field label {
      color: #9e9e9e; /* Change as per your color scheme */
    }
    .btn {
      background-color: #007bff; /* Change button color */
    }
